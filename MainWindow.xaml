        <Label x:Name="labelLicense" Content=" " HorizontalAlignment="Left" Margin="435,204,0,0" VerticalAlignment="Top" Width="145" Height="16" Grid.ColumnSpan="1" Padding="0" FontSize="14"/>
        <Label x:Name="labelElectrical" Content=" " HorizontalAlignment="Left" Margin="435,225,0,0" VerticalAlignment="Top" Width="145" Height="16" Grid.ColumnSpan="1" Padding="0" FontSize="14"/>

    </Grid>
</Window>
